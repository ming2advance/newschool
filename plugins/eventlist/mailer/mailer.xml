			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
		
		<field type="text" name="receivers" label="PLG_EVENTLIST_MAILER_ADDITIONAL_MAIL_RECEIVERS" default="" description="PLG_EVENTLIST_MAILER_ADDITIONAL_MAIL_RECEIVERS_DESC" />
