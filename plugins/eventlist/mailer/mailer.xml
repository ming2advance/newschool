  <config>
  <fields name="params">
	<fieldset name="basic">
    <field type="radio" name="reg_mail_user" label="PLG_EVENTLIST_MAILER_MAIL_USER_REG" default="1" description="PLG_EVENTLIST_MAILER_MAIL_USER_REG_DESC">
    	<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field type="radio" name="reg_mail_admin" label="PLG_EVENTLIST_MAILER_MAIL_ADMIN_REG" default="0" description="PLG_EVENTLIST_MAILER_MAIL_ADMIN_REG_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field type="radio" name="unreg_mail_user" label="PLG_EVENTLIST_MAILER_MAIL_USER_UNREG" default="1" description="PLG_EVENTLIST_MAILER_MAIL_USER_UNREG_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field type="radio" name="unreg_mail_admin" label="PLG_EVENTLIST_MAILER_MAIL_ADMIN_UNREG" default="0" description="PLG_EVENTLIST_MAILER_MAIL_ADMIN_UNREG_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
    </field>
	
		<field type="radio" name="newevent_mail_user" label="PLG_EVENTLIST_MAILER_MAIL_USER_NEW_EVENT" default="0" description="PLG_EVENTLIST_MAILER_MAIL_USER_NEW_EVENT_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
		<field type="radio" name="newevent_mail_admin" label="PLG_EVENTLIST_MAILER_MAIL_ADMIN_NEW_EVENT" default="0" description="PLG_EVENTLIST_MAILER_MAIL_ADMIN_NEW_EVENT_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
			<field type="radio" name="editevent_mail_user" label="PLG_EVENTLIST_MAILER_MAIL_USER_EDIT_EVENT" default="0" description="PLG_EVENTLIST_MAILER_MAIL_USER_EDIT_EVENT_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
		<field type="radio" name="editevent_mail_admin" label="PLG_EVENTLIST_MAILER_MAIL_ADMIN_EDIT_EVENT" default="0" description="PLG_EVENTLIST_MAILER_MAIL_ADMIN_EDIT_EVENT_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
			<field type="radio" name="newvenue_mail_user" label="PLG_EVENTLIST_MAILER_MAIL_USER_NEW_VENUE" default="0" description="PLG_EVENTLIST_MAILER_MAIL_USER_NEW_VENUE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
		<field type="radio" name="newvenue_mail_admin" label="PLG_EVENTLIST_MAILER_MAIL_ADMIN_NEW_VENUE" default="0" description="PLG_EVENTLIST_MAILER_MAIL_ADMIN_NEW_VENUE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
	    </field>
