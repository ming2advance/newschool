  <config>
    <fields name="params">
      <fieldset name="advanced">
        <field name="ColorCSS" type="list" default="default" label="Color Variation"
               description="Color variation to use" filter="string">
          <option value="default">Default</option>
          <option value="color1">Color1</option>
          <option value="color2">Color2</option>
          <option value="color3">Color3</option>
        </field>
        <field name="FontSize" type="list" default="3" label="Font size" description="Font size to use" filter="int">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
        </field>
        <field name="ScreenType" type="list" default="fmax" label="Template Width"
               description="Width style of the template" filter="string">
          <option value="wide"></option>
        </field>
        <field name="MenuType" type="list" default="1" label="Menu Module" description="Menu display module"
               filter="int">
          <option value="2">css</option>
          <option value="4">Moo</option>
        </field>
        <field name="usertool" type="list" default="1" label="Display template tool" description="Display template tool"
               filter="int">
          <option value="0">No display</option>
          <option value="2">Font Size</option>
          <option value="4">Color Css</option>
          <option value="6">Font Size and Color Css</option>
        </field>
      </fieldset>
    </fields>
